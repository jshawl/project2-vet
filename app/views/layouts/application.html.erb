<!DOCTYPE html>
<html>
<head>
  <title>Vet Scheduler</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>

  <h1>Doctor Doolittle's Veterinary Medicine</h1>

</header>

  <% if current_user %>
    <h3><%= link_to 'Signout', destroy_user_session_path, :method => :delete %></h3>
  <% else %>
    <h3><%= link_to 'Signup', new_user_registration_path %> or <%= link_to 'Signin', new_user_session_path %></h3>
  <% end %>

  <h4><%= link_to 'Our Vets', vets_path %> | <%= link_to 'Our Pets', pets_path %></h4>

<%= yield %>

</body>
</html>
